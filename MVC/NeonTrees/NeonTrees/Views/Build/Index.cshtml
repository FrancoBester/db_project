@model IEnumerable<NeonTrees.Models.Build>

@{ ViewData["Title"] = "Index"; }

<h1>Build</h1>

<p>
    <a class="btn btn-primary text-white" asp-action="Create">Create new build</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Total)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDetails)
    </td>
    <td>
        <a class="btn btn-primary text-white" asp-action="View" asp-route-id="@item.ID">
            @*<i class="fas fa-edit"></i>*@View
        </a>
        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@item.ID">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID">
            <i class="fas fa-trash"></i>
        </a>
    </td>
</tr>}
    </tbody>
</table>
